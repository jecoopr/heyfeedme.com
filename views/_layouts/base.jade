include ../_mixins/_mixins

html
  head
    title #{title || "Jeff Cooper"}
    meta(http-equiv='Content-Type', content='text/html', charset='utf-8')
    meta(name='viewport', content='width=device-width', initial-scale='1', user-scalable='no')
    link(rel='stylesheet', href='/dist/styles/site.css')
    link(rel='shortcut icon', href='/favicon.png')
    
    block styles

  body
    .site-content
      block header
        header.m-header
          .container.container-1
            include ../_includes/header-nav.jade
            
            block header-text

        block body

    block footer
      .m-footer
        .module-content-wrap
          .module-content
            .container.container-1
              p.text-center
                a(href='/') home
                a(href='/photography') photography
                //- a(href='/code') code
                a(target='_blank', href='http://www.etsy.com/shop/jecoopr') etsy shop

