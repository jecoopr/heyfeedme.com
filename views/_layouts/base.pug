include ../_mixins/_mixins

html(prefix='og: http://ogp.me/ns#')
  head
    block title
      title #{title || 'Recipes so you don\'t get hangry - heyfeedme.'}
    block seoDescription
    meta(http-equiv='Content-Type' content='text/html' charset='utf-8')
    meta(name='viewport' content='width=device-width' initial-scale='1' user-scalable='no')
    +touchIcons('/images/icons/touch-icons')
    meta(name='p:domain_verify' content='5f3a1aa6d3f8bc5e07205eb92f6f05b3')
    block meta
    link(rel='stylesheet' href='/dist/styles/site.css')
    link(rel='shortcut icon' href='/images/logos/hfm-logo.png')

    block styles

  body
    block preSiteContent
    section.site-content
      block header
      block body

    block footer
      include ../_includes/footer

    block modals
      .modal.js-modal
    block overlays
      .overlay.overlay-1.js-overlay

    script(src='/bower_components/jquery/dist/jquery.min.js')
    if NODE_ENV === 'production'
      script(src='/js/_analytics.js' async)
    block js
