mixin recipeFilters(filterItems, activeFilters)
  .filters-wrap
    span.snm-section
      if activeFilters
        =filters.capitalizeTitles(filters.stringifyArray(activeFilters, ', ', 2), ['and', 'more...'])
    .filters
      if filterItems
        span(data-section= 'all-recipes',
          class=(filterItems.indexOf('all recipes') > -1 ? 'active' : null )) all recipes
        each filter in filterItems
          -var activeFilter = activeFilters && activeFilters.indexOf(filter) > -1
          span(data-section= filters.slugify(filter),
            class=(activeFilter ? 'active' : null))= filter
