include crumbs

mixin recipes(recipes)
  .m-recipe-listings
    .rlm-wrap
      .rlm-header
        p.js-recipes-tally.rlm-tally
          | #{filters.i.tally(recipes, ['recipe', 'recipes'])} -
          a(href='#' data-nav='.js-right-nav').js-nav-ctrl
            |  #{filters.capitalizeTitles(filters.i.stringifyArray(activeSections, ', ', 5, ['and ', ' more...']), ['more...', 'and'])}
        .rlm-settings
          if recipes.length > 1
            .select-wrap.rlm-sort
              select(
                name=displaySettings
                data-sort='recipesListingsSort').select.js-rlm-sort
                each v, k in data.sortOptions
                  option(
                    value=k
                    selected = data.sort === k
                  )= v
        if data.tag && crumbs
          .m-crumbs
            +crumbs(crumbs)
      .rlm-recipes-wrap
        each r in recipes
          a(href=r.link).rlm-recipe
            p.rlm-title= filters.capitalizeTitles(r.name)
            .rlm-photo(
              style= r.photo ? `background-image:url(/${r.photo});` : null
            )
            .rlm-details
              p= filters.moment(r.published).fromNow()
              .rlm-diets
                p= filters.capitalizeTitles(filters.i.stringifyArray(r.classifications, ', '))

      if !recipes.length
        p.rlm-none.text-center
         button(data-nav='.js-right-nav').js-nav-ctrl.btn.btn-1 Adjust Filters

if compileRecipes
  +recipes(recipes)
