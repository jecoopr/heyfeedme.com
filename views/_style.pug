      p.text-center Center text.
      p.text-clip(style='width:200px') This text gets clipped with text-clip!

      .gap.l2

    // Components.
      ---------------------
    .m-components
      .module-content-wrap
        h2.heading.h1 Components

        .break.l1

        // Buttons.
        h3.heading.h2 Buttons
        button.btn btn
        button.btn.btn-1 btn-1
        button.btn.btn-2 btn-2
        button.btn.btn-3 btn-3

        .break.l1

        // Crumbs.
        h3.heading.h2 Crumbs
        .crumbs
          span.crumb
            a(href='/') Home
          span.crumb Here

        .break.l1

        // Filters.
        h3.heading.h2 Filters
        .filters-wrap
          .filters
            span Filter 1
            span Filter 2
            span Filter 3

        .break.l1

        // Forms.
        h3.heading.h2 Forms
        form.form
          h4.heading.h3 Colored form group
          .form-group.fg-color
            label checkbox
            input(type='checkbox')

          .form-group.fg-color
            label Text
            input(type='text').form-field

          .form-group.fg-color
            label file
            input(type='file')

          .form-group.fg-color
            label file wide
            .form-field.ff-wide
              input(type='file')

          .form-group.fg-color
            label Icon
            .input-icon-wrap
              i.icon.fa.fa-search.no-click
              input(
                type='text'
                placeholder='What to eat?'
              )

          .form-group
            label Full width
            input(type='text' value='ff-wide').form-field.ff-wide
            textarea.form-field.ff-wide

          .form-group
            label Read only
            input(type='text' value='Can\'t touch this' readonly).form-field.ff-wide
            textarea(readonly).form-field.ff-wide Or this

          .text-center
            input(type='submit' value='Input submit')
            button(type='submit').btn.btn-1 Button submit

        .gap.l2

        form.form.form-color
          h4.h4 Color Form
          .form-group
            .form-group

        .break.l1

        // Icons.
        h3.heading.h2 Icons
        ul
          li
            i.icon.fa.fa-bolt
            |  Clickable
          li
            i.icon.fa.fa-bomb.no-click
            |  No click

        .break.l1

        // Links.
        h3.heading.h2 Links
        a(href='/') Link to home page

        .break.l1

        // Modals.
        h3.heading.h2 Modals
        p
          i.icon Modal
        p
          i.icon Modal with overlay

        .break.l1

